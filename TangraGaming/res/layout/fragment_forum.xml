<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0aeae"
    android:orientation="vertical" >

    <!-- This acts as the Actionbar -->

    <HorizontalScrollView
        android:id="@+id/scrollMainRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearMainRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7e7d7d"
            android:orientation="horizontal" >

            <!-- Here automatically generated buttons based on data in sqlite db will be added -->

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dip"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/joinedroomsforum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dip"
        android:gravity="center"
        android:text="@string/joinedRoomsForum"
        android:textColor="#dddddd"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="#ffffff"
        android:padding="10dip" />

    <ListView
        android:id="@+id/listViewJoinedRooms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip" >

        <Button
            android:id="@+id/btnSearchRooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@layout/button"
            android:text="@string/searchRoomsForum"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCreateRoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/button"
            android:text="@string/createRoomForum"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>