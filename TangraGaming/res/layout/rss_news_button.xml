<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#9a9898" android:startColor="#c1bdbd" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

    <shape>
        <gradient android:angle="270" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />

        <stroke android:width="3dp" android:color="#212020" />

        <corners android:radius="2dp" />

        <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
    </shape>

</selector>