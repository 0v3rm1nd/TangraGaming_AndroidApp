<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0aeae"
    android:orientation="vertical" >

    <!-- This acts as the Actionbar -->

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7e7d7d"
            android:orientation="horizontal" >

            <!-- Get the action bar on button click -->

            <Button
                android:id="@+id/btnFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@layout/rss_news_button"
                android:text="@string/friends"
                android:textColor="#eaeaea"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnFriendReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@layout/rss_news_button"
                android:text="@string/frreq"
                android:textColor="#eaeaea"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnFrReqStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@layout/rss_news_button"
                android:text="@string/frreqstatus"
                android:textColor="#eaeaea"
                android:textSize="20sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dip"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/listfirends"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dip"
        android:gravity="center"
        android:text="@string/listrequests"
        android:textColor="#dddddd"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="#ffffff"
        android:padding="10dip" />

    <ListView
        android:id="@+id/listViewFriendRequests"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>