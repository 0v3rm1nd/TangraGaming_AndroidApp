<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b0aeae"
    tools:context=".PostMessage" 
    android:padding="10dp">

    <View
        android:id="@+id/line5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/post_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line5"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="@string/makeaposttitle"
        android:textColor="#fff"
        android:textSize="23sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/post_message_title"
        android:layout_marginBottom="10dp"
        android:background="#ffffff" />

    <EditText
        android:id="@+id/postcontent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/line2"
        android:layout_marginRight="5dp"
        android:ems="10"
        android:hint="@+string/posthint"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLength="150"
        android:textColor="#606060" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postcontent"
        android:layout_marginTop="10dip"
        android:text="@string/makeapost"
        android:textColor="#606060"
        android:textSize="18sp" />

</RelativeLayout>